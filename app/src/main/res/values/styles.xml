<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="statusBarBackground">@android:color/transparent</item>
    </style>


    <style name="LeanerName">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#828181</item>
    </style>

    <style name="LearnerScore">
        <item name="android:textColor">#949191</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="submitButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/submit_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dialogText">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>